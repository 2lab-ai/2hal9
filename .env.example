# HAL9 Environment Configuration Example
# Copy this file to .env and update values

# Server Configuration
HAL9_ENV=development
RUST_LOG=info,hal9=debug
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
GRPC_PORT=9090

# Database Configuration
DATABASE_URL=postgres://hal9:hal9pass@localhost:5432/hal9db
DATABASE_MAX_CONNECTIONS=100
DATABASE_MIN_CONNECTIONS=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRY=86400 # 24 hours
API_KEY_PREFIX=hal9_

# AI Providers
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
BEDROCK_REGION=us-east-1
OLLAMA_HOST=http://localhost:11434

# Game Server
GAME_SERVER_URL=http://localhost:3000
GAME_WEBSOCKET_URL=ws://localhost:8081

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9091
JAEGER_ENABLED=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_PER_SECOND=10
RATE_LIMIT_BURST=20

# Storage
UPLOAD_MAX_SIZE=10485760 # 10MB
STORAGE_PATH=/tmp/hal9/storage

# Feature Flags
ENABLE_GAME_SERVER=true
ENABLE_AI_PROVIDERS=true
ENABLE_METRICS=true